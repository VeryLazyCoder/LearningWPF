<Window x:Class="LearningWPF.Views.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:LearningWPF.ViewModels"
        xmlns:local="clr-namespace:LearningWPF.Views"
        mc:Ignorable="d"
        Title="ConfigurationWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:ConfigurationWindowViewModel></vm:ConfigurationWindowViewModel>
    </Window.DataContext>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/фон1.bmp"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="300*"/>
            <RowDefinition Height="300*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="250*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Выберите размер карты и количество противников" 
                   Grid.ColumnSpan="3" Foreground="#FF202320" HorizontalAlignment="Center" 
                   FontSize="22" FontFamily="Arial Black" VerticalAlignment="Center">
        </TextBlock>
        <ComboBox Grid.Column="1" Grid.Row="1" SelectedItem="{Binding MapVariant}"
                  ItemsSource="{Binding Maps}" 
                  FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="Aqua">
        </ComboBox>
        <Button Grid.Column="1" Grid.Row="2" Content="К игре" FontSize="24" Background="Green" 
                Command="{Binding SwitchToGameWindowCommand}">
        </Button>
    </Grid>
</Window>
